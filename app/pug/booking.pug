extends layouts/default.pug

append variables
	- let pageTitle = "Заявка на бронирование";
	- let breadCrumbsList = [{"title": "Главная", "link": "/"}, {"title": "Крым", "link": "/"}, {"title": "Алушта", "link": "/"}, {"title": "Развлечения", "link": "/"}];
	- description += pageTitle;
	- let currentPage = "Заявка на бронирование"

block content
	.page-header
		.container
			.page-title.title-h2!= currentPage
	.page-body
		.container
			.booking
				.booking__body 
					.booking__main.main-booking
						.main-booking__header 
							.main-booking__content
								.main-booking__title.title-h4 Двухместный номер с 1 кроватью стандарт класс (широкая кровать+ кондиционер+ чайник)
								.main-booking__options
									.card-options.has-icons
										each option in cardOptions
											.default-text--caption.card-option(class=`card-option--${option.key}`)= option.caption
							.main-booking__image.image-ibg
								img(src="images/main-card/apartment-img-1@2x.jpg", alt="превью")
						.main-booking__groups 
							.main-booking__group.group-booking.group-booking--calendar
								.group-booking__items
									.form-item
										.form-item__caption.default-text--small Дата заезда
										.custom-select.custom-select-calendar
											button(type="button")#button-calendar-date-from.custom-select__btn.date-picker-button 21 июня 2024
											input(type="hidden", name="date_from")#input-date-from
											.calendar-container
									.form-item
										.form-item__caption.default-text--small Дата выезда
										.custom-select.custom-select-calendar
											button(type="button")#button-calendar-date-to.custom-select__btn.date-picker-button 21 июня 2024
											input(type="hidden", name="date_to")#input-date-to
											.calendar-container
									+btn("Сохранить", "btn--secondary btn-save", "button")
									.calendar-popup#calendar-popup(style="display: none;")
								.group-booking__items
									.form-item
										.form-item__caption.default-text--small Кол-во взрослых
										.form-quantity
											button(type="button").form-quantity-btn.form-quantity-btn__minus
												<svg width="10" height="1" viewBox="0 0 10 1" fill="none" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" clip-rule="evenodd" d="M10 1H0V0H10V1Z" fill="#08151A" />
												</svg>
											input(type="text", name="quantity_adults" value="2 взрослых").form-quantity__input
											button(type="button").form-quantity-btn.form-quantity-btn__plus
												<svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" clip-rule="evenodd" d="M10 5.5H0V4.5H10V5.5Z" fill="#08151A" />
													<path fill-rule="evenodd" clip-rule="evenodd" d="M4.5 10L4.5 0L5.5 4.37113e-08L5.5 10H4.5Z" fill="#08151A" />
												</svg>
									.form-item
										.form-item__caption.default-text--small Кол-во детей
										.form-quantity
											button(type="button").form-quantity-btn.form-quantity-btn__minus
												<svg width="10" height="1" viewBox="0 0 10 1" fill="none" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" clip-rule="evenodd" d="M10 1H0V0H10V1Z" fill="#08151A" />
												</svg>
											input(type="text", name="quantity_children" value="0 детей").form-quantity__input
											button(type="button").form-quantity-btn.form-quantity-btn__plus
												<svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" clip-rule="evenodd" d="M10 5.5H0V4.5H10V5.5Z" fill="#08151A" />
													<path fill-rule="evenodd" clip-rule="evenodd" d="M4.5 10L4.5 0L5.5 4.37113e-08L5.5 10H4.5Z" fill="#08151A" />
												</svg>
									+btn("Сохранить", "btn--secondary btn-save", "button")
							.main-booking__group.group-booking.group-booking.group-booking--contacts
								.group-booking__title.title-h5 Укажите контакты, по которым с вами можно связаться
								.group-booking__fields
									+formItem("text", "booking_name", "Ваше имя")
									+formItem("email", "booking_email", "Email")
									+formItem("tel", "booking_phone", "+7-900-000-00-00")
									.form-item.form-item-textarea
										.form-item__field
											textarea(name="booking_message" id="booking_message" placeholder="Сообщение владельцу").form-input.form-textarea
											label(for="booking_message").form-label Сообщение владельцу 
					.booking__result.result-booking
						.result-booking__text.default-text--small-s Стоимость ориентировочная. Окончательная стоимость определяется владельцем после подтверждения заявки
						.result-booking__cost.title-h4
							.result-booking__cost-caption Итого
							.result-booking__cost-price
								| 15 044 ₽ 
								span.default-text--small-s.color-gray 3 ночи
						.form-buttons
							+btn("Оставить заявку", "btn--primary", "submit")
							+btn("Отменить", "btn--gray", "reset")
						.form-text.default-text--small-s Отправляя заявку, вы даете согласие на обработку своих персональных данных и принимаете условия #[a(href="#") Политики конфидециальности] и #[a(href="#") Пользовательского соглашения]
